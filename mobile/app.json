{
  "expo": {
    "name": "Spotify Voice Queue",
    "slug": "spotify-voice-queue",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "spotifyvoicequeue",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.spotifyvoicequeue",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice commands.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to add songs to your queue.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "package": "com.yourname.spotifyvoicequeue",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "b403b0a8-9c11-41c0-b3c0-ec26f0727be5"
      }
    }
  }
}
